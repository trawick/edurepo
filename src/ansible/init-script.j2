#!/bin/sh

SERVICE_NAME={{ project_name }}-app
PIDFILE={{ log_dir }}/{{ project_name }}.pid
UWSGI_INI={{ log_dir }}/{{ project_name }}.ini
UWSGI_ENV={{ virtualenv_dir }}

. ${UWSGI_ENV}/bin/activate

start_service() {
    if test -f "$PIDFILE"; then
        echo " * $SERVICE_NAME pid file already exists..."
        PID=`cat $PIDFILE`
        if kill -0 $PID 2>/dev/null; then
            echo " * $SERVICE_NAME is already running"
            exit 1
        fi
        rm $PIDFILE
    fi
    echo -n " * Starting $SERVICE_NAME..."
    uwsgi $UWSGI_INI
}

stop_service() {
    echo " * Stopping $SERVICE_NAME..."
    uwsgi --stop $PIDFILE
    sleep 1
    rm $PIDFILE
}

status_service() {
    PID=`cat $PIDFILE`
    if kill -0 $PID 2>/dev/null; then
        echo "Running"
    else
        echo "Not running"
        exit 1
    fi
}

case "$1" in
  status)
    status_service
    ;;
  start)
    start_service
    ;;
  stop)
    stop_service
    ;;
  restart)
    stop_service
    start_service
    ;;
  *)
    echo "Usage: service $SERVICE_NAME {start|stop|restart|status}" >&2
    exit 1   
    ;;
esac

exit 0
